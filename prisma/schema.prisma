// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

enum Language {
  EN
  AR
}

enum ProjectStatus {
  DRAFT
  IN_PROGRESS
  COMPLETED
  ARCHIVED
}

enum SkillLevel {
  BEGINNER
  INTERMEDIATE
  ADVANCED
  EXPERT
}

model File {
  id        String    @id @default(cuid()) @map("_id")
  name      String
  url       String // Will store full URL path like "/api/files/[id]"
  path      String
  type      String
  size      Int
  base64    String // Store the actual base64 data here
  createdAt DateTime?
  updatedAt DateTime?

  // Relations - Changed to one-to-many to allow file reuse
  profileImages   PersonalInfo[] @relation("profileImage")
  heroProfileImgs HeroContent[]  @relation("heroProfileImage")
  projectImages   Project[]      @relation("projectImage")
  HeroContent     HeroContent[]  @relation("heroProfileCv")
  Achievement     Achievement[]

  @@map("files")
}

// Authentication Models
model User {
  id        String    @id @default(cuid()) @map("_id")
  email     String    @unique
  password  String
  lastLogin DateTime?
  createdAt DateTime?
  updatedAt DateTime?

  @@map("users")
}

// Core Content Models with Multi-language Support
model PersonalInfo {
  id          String    @id @default(cuid()) @map("_id")
  lang        Language
  firstName   String
  lastName    String
  title       String
  description String
  bio         String?
  createdAt   DateTime?
  updatedAt   DateTime?

  // relations
  imageId String?
  image   File?   @relation("profileImage", fields: [imageId], references: [id])

  @@map("personal_info")
}

model HeroContent {
  id           String    @id @default(cuid()) @map("_id")
  lang         Language
  name         String
  mainTitle    String
  subTitle     String?
  description  String
  dynamicTexts String[] // Array of dynamic texts like "Web Developer", "Flutter Expert", etc.
  stats        Json?
  ctaText      String?
  createdAt    DateTime?
  updatedAt    DateTime?

  // File relations
  profileImageId String?
  profileImage   File?   @relation("heroProfileImage", fields: [profileImageId], references: [id], onDelete: SetNull)

  resumeId String?
  resume   File?   @relation("heroProfileCv", fields: [resumeId], references: [id])

  @@map("hero_content")
}

model AboutCard {
  id        String   @id @default(cuid()) @map("_id")
  lang      Language
  title     String
  icon      String?
  question  String
  answer    String
  gradient  String? // CSS gradient class
  order     Int      @default(0)
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("about_cards")
}

model SkillCategory {
  id           String   @id @default(cuid()) @map("_id")
  lang         Language
  title        String
  description  String
  gradient     String?
  experience   String? // e.g., "5+ years"
  projectCount Int      @default(0)
  order        Int      @default(0)
  isActive     Boolean  @default(true)
  icon         String? // Lucide icon name
  skills       Skill[]
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  @@map("skill_categories")
}

model Skill {
  id              String        @id @default(cuid()) @map("_id")
  lang            Language
  name            String
  level           SkillLevel    @default(INTERMEDIATE)
  description     String?
  yearsExperience Int?
  projectCount    Int           @default(0)
  order           Int           @default(0)
  isActive        Boolean       @default(true)
  icon            String? // Lucide icon name
  skillCategoryId String
  skillCategory   SkillCategory @relation(fields: [skillCategoryId], references: [id], onDelete: Cascade)
  createdAt       DateTime      @default(now())
  updatedAt       DateTime      @updatedAt

  @@map("skills")
}

model Project {
  id              String        @id @default(cuid()) @map("_id")
  lang            Language
  title           String
  description     String
  longDescription String?
  status          ProjectStatus @default(DRAFT)
  category        String // e.g., "web", "mobile", "ai", "devops"
  projectUrl      String?
  githubUrl       String?
  demoUrl         String?
  duration        String? // e.g., "4 months"
  teamSize        String? // e.g., "3 developers"
  technologies    String[] // Array of technology tags
  features        String[] // Array of key features
  order           Int           @default(0)
  isFeatured      Boolean       @default(false)
  isActive        Boolean       @default(true)
  startDate       DateTime?
  endDate         DateTime?
  createdAt       DateTime      @default(now())
  updatedAt       DateTime      @updatedAt

  // File relations
  imageId String?
  image   File?   @relation("projectImage", fields: [imageId], references: [id], onDelete: SetNull)

  @@map("projects")
}

model Achievement {
  id          String   @id @default(cuid()) @map("_id")
  lang        Language
  icon        String?
  title       String
  subtitle    String?
  description String
  value       String? // The main achievement value (e.g., "+20", "98%")
  order       Int      @default(0)
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // File relations
  File   File?   @relation(fields: [fileId], references: [id])
  fileId String?

  @@map("achievements")
}

model ContactInfo {
  id        String   @id @default(cuid()) @map("_id")
  lang      Language
  type      String // e.g., "email", "phone", "whatsapp", "linkedin", "github", "location"
  label     String
  value     String
  link      String?
  icon      String?
  order     Int      @default(0)
  isActive  Boolean  @default(true)
  isPrimary Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([lang, type])
  @@map("contact_info")
}

model SocialLink {
  id        String   @id @default(cuid()) @map("_id")
  lang      Language
  name      String
  url       String
  icon      String?
  order     Int      @default(0)
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([lang, name])
  @@map("social_links")
}

model Service {
  id          String   @id @default(cuid()) @map("_id")
  lang        Language
  name        String
  description String?
  icon        String?
  price       String?
  duration    String?
  order       Int      @default(0)
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("services")
}

model QuickLink {
  id        String   @id @default(cuid()) @map("_id")
  lang      Language
  name      String
  href      String
  order     Int      @default(0)
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("quick_links")
}
